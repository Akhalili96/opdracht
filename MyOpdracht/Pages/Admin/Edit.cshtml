@page
@model MyOpdracht.Pages.Admin.EditModel
@{
}

<h1>Edit Product</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AddEditProduct.Id" />
    <dl class="dl-horizontal">
        <dd><label asp-for="AddEditProduct.Name"></label></dd>
        <dt>
            <input asp-for="AddEditProduct.Name" class="form-control" />
            <span asp-validation-for="AddEditProduct.Name"></span>
        </dt>
        <dd><label asp-for="AddEditProduct.Description"></label></dd>
        <dt>
            <textarea asp-for="AddEditProduct.Description" class="form-control"></textarea>
            <span asp-validation-for="AddEditProduct.Description"></span>
        </dt>
        <dd><label asp-for="AddEditProduct.Price"></label></dd>
        <dt>
            <input asp-for="AddEditProduct.Price" class="form-control" />
            <span asp-validation-for="AddEditProduct.Price"></span>
        </dt>
        <dd><label asp-for="AddEditProduct.QuantityInstock"></label></dd>
        <dt>
            <input asp-for="AddEditProduct.QuantityInstock" class="form-control" />
            <span asp-validation-for="AddEditProduct.QuantityInstock"></span>
        </dt>
        <dd><label asp-for="AddEditProduct.Picture"></label></dd>
        <dt>
            <input asp-for="AddEditProduct.Picture" />
            <span asp-validation-for="AddEditProduct.Picture"></span>
        </dt>
        <dd>Group</dd>
        <dt>
            @foreach (var item in Model.AddEditProduct.Categories)
            {
            <p>
                <input type="checkbox" name="selectedGroups" value="@item.Id" @((Model.GroupsProduct.Any(c => c == item.Id) ? "checked" : "")) /> @item.Name
            </p>
            }
        </dt>
        <dd></dd>
        <dt>
            <input type="submit" class="btn btn-success" value="Save" />
        </dt>
    </dl>



</form>
